<div class="panel panel-default">

    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-10">Formulario de Afiliación</div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row padding-3 hide">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">id</div>
            <div class="col-xs-8">
                <input id="txtId" class="form-control">
            </div>
        </div>
        <div class="row padding-3">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">Código</div>
            <div class="col-xs-8">
                <input id="txtCodigo" class="form-control">
            </div>
        </div>
        <div class="row padding-3">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">Nombres</div>
            <div class="col-xs-8">
                <input id="txtNombres" class="form-control">
            </div>
            <div id="valtxtNombres" class="col-xs-1"></div>
        </div>
        <div class="row padding-3">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">Apellidos</div>
            <div class="col-xs-8">
                <input id="txtApellidos" class="form-control">
            </div>
            <div id="valtxtApellidos" class="col-xs-1"></div>
        </div>
        <div class="row padding-3">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">Email</div>
            <div class="col-xs-8">
                <input id="txtEmail" class="form-control">
            </div>
            <div id="valEmail" class="col-xs-1"></div>
        </div>
        <div class="row padding-3">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">Tel.Celular</div>
            <div class="col-xs-8">
                <input id="txttelefono_celular" class="form-control">
            </div>
            <div id="valtxttelefono_celular" class="col-xs-1"></div>
        </div>
        
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-2"></div>
            <div class="col-xs-2">
                <button id="btnGrabar" class="btn btn-block btn-primary">
                    Grabar
                </button>
            </div>
            <div class="col-xs-2">
                <button id="btnEliminar" class="btn btn-block btn-danger">
                    Eliminar
                </button>
            </div>
            <div class="col-xs-2">
                <button id="btnLimpiar" class="btn btn-block btn-success">
                    Nuevo
                </button>
            </div>
        </div>
    </div>
</div>